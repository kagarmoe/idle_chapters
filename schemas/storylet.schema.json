{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$title": "Cozy Game Storylet Schema",
  "$id": "https://example.com/schemas/storylet.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["storylet_id", "place_id", "entry_type", "choices"],
  "properties": {
    "storylet_id": {
      "$ref": "common.schema.json#/$defs/id"
    },
    "place_id": {
      "$ref": "common.schema.json#/$defs/id"
    },
    "entry_type": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "oneOf": [
        { "$ref": "common.schema.json#/$defs/nonempty_string" },
        { "type": "null" }
      ]
    },
    "prompt": {
      "oneOf": [
        { "$ref": "common.schema.json#/$defs/nonempty_string" },
        { "type": "null" }
      ]
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "need_hint": {
      "oneOf": [
        { "$ref": "common.schema.json#/$defs/nonempty_string" },
        { "type": "null" }
      ]
    },
    "mood_hint": {
      "oneOf": [
        { "$ref": "common.schema.json#/$defs/nonempty_string" },
        { "type": "null" }
      ]
    },
    "conditions": {
      "type": "object",
      "additionalProperties": true,
      "default": {}
    },
    "choices": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": { "$ref": "#/$defs/choice" }
    },
    "debug": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  },
  "$defs": {
    "choice": {
      "type": "object",
      "additionalProperties": false,
      "required": ["choice_id", "label", "effects"],
      "properties": {
        "choice_id": {
          "type": "string",
          "enum": ["1", "2", "3"]
        },
        "label": { "$ref": "common.schema.json#/$defs/nonempty_string" },
        "effects": { "$ref": "common.schema.json#/$defs/effects" }
      }
    },
    "effects": { "$ref": "common.schema.json#/$defs/effects" }
  }
}
