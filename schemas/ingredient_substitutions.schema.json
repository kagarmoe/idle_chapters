{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$title": "Ingredient Substitution Rules Schema",
  "$id": "https://example.com/schemas/ingredient_substitutions.schema.json",
  "type": "object",
  "required": ["substitutions"],
  "properties": {
    "substitutions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["token", "selector", "description", "constraints"],
        "properties": {
          "token": {
            "type": "string",
            "pattern": "^any:[a-z0-9_=;&-]+$"
          },
          "selector": {
            "type": "object",
            "additionalProperties": false,
            "required": ["match_all"],
            "properties": {
              "match_all": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "object" }
              },
              "match_any": {
                "type": "array",
                "items": { "type": "object" },
                "default": []
              },
              "exclude": {
                "type": "array",
                "items": { "type": "object" },
                "default": []
              }
            }
          },
          "description": {
            "$ref": "common.schema.json#/$defs/nonempty_string"
          },
          "constraints": {
            "type": "object",
            "additionalProperties": false,
            "required": ["category", "tags", "place_policy"],
            "properties": {
              "category": {
                "type": ["string", "null"],
                "enum": ["Botanical", "Crystal", null]
              },
              "tags": {
                "type": "array",
                "items": { "type": "string" },
                "default": []
              },
              "place_policy": {
                "type": "string",
                "enum": ["any_place", "same_place", "same_zone"]
              },
              "max_results": {
                "type": "integer",
                "minimum": 1,
                "maximum": 25,
                "default": 10
              }
            }
          },
          "fallback": {
            "type": ["string", "null"],
            "default": null
          }
        }
      }
    }
  }
}
