{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$title": "Action Schema",
  "$id": "https://example.com/schemas/actions.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "actions"
  ],
  "properties": {
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "https://example.com/schemas/actions.schema.json#/$defs/action"
      }
    }
  },
  "$defs": {
    "action": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "action_id",
        "label",
        "intent_signature"
      ],
      "properties": {
        "action_id": {
          "$ref": "common.schema.json#/$defs/id"
        },
        "label": {
          "$ref": "common.schema.json#/$defs/nonempty_string"
        },
        "when": {
          "oneOf": [
            {
              "$ref": "conditions.schema.json"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "effects": {
          "$ref": "common.schema.json#/$defs/effects"
        },
        "result": {
          "oneOf": [
            {
              "$ref": "common.schema.json#/$defs/nonempty_string"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "result_variants": {
          "type": "array",
          "items": {
            "$ref": "common.schema.json#/$defs/nonempty_string"
          },
          "default": []
        },
        "intent_signature": {
          "$ref": "https://example.com/schemas/actions.schema.json#/$defs/intent_signature"
        }
      }
    },
    "intent_signature": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "keywords",
        "phrases"
      ],
      "properties": {
        "keywords": {
          "type": "array",
          "items": {
            "$ref": "common.schema.json#/$defs/nonempty_string"
          },
          "default": []
        },
        "phrases": {
          "type": "array",
          "items": {
            "$ref": "common.schema.json#/$defs/nonempty_string"
          },
          "default": []
        }
      }
    }
  }
}
