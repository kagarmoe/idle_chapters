{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$title": "Journal Page Schema",
  "$id": "https://example.com/schemas/journal_page.schema.json",
  "type": "object",
  "required": ["journal_page"],
  "properties": {
    "journal_page": {
      "type": "object",
      "additionalProperties": false,
      "required": ["page_id", "date", "place_id", "entry_type", "mood", "need", "ingredients", "prompt", "body"],
      "properties": {
        "page_id": {
          "$ref": "common.schema.json#/$defs/id"
        },
        "date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "place_id": {
          "$ref": "common.schema.json#/$defs/id"
        },
        "entry_type": {
          "type": "string",
          "enum": ["tea", "spell", "field_note", "dream_fragment", "inventory"]
        },
        "mood": {
          "$ref": "common.schema.json#/$defs/nonempty_string"
        },
        "need": {
          "$ref": "common.schema.json#/$defs/nonempty_string"
        },
        "ingredients": {
          "type": "array",
          "minItems": 0,
          "items": { "$ref": "common.schema.json#/$defs/id" }
        },
        "prompt": {
          "$ref": "common.schema.json#/$defs/nonempty_string"
        },
        "body": {
          "$ref": "common.schema.json#/$defs/nonempty_string"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        }
      }
    }
  }
}
