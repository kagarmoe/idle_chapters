{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$title": "NPCs Schema",
  "type": "object",
  "required": ["npcs"],
  "properties": {
    "npcs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["npc_id", "display_name", "npc_kind", "home_location_id", "spawn_rules", "interactions"],
        "properties": {
          "npc_id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$",
            "description": "Stable identifier used by events, dialogue, and NPC acquisition rules."
          },
          "display_name": {
            "type": "string",
            "minLength": 1
          },
          "npc_kind": {
            "type": "string",
            "enum": ["human", "animal"]
          },
          "species": {
            "type": ["string", "null"],
            "default": null,
            "description": "For animals (cat, dog, crow, heron, etc.)."
          },
          "pronouns": {
            "type": ["string", "null"],
            "default": null
          },
          "home_location_id": {
            "type": "string",
            "minLength": 1
          },
          "spawn_rules": {
            "type": "object",
            "additionalProperties": false,
            "required": ["presence"],
            "properties": {
              "presence": {
                "type": "string",
                "enum": ["always", "scheduled", "rotating"]
              },
              "schedule_id": {
                "type": ["string", "null"],
                "default": null
              },
              "notes": {
                "type": ["string", "null"],
                "default": null
              }
            }
          },
          "interactions": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "enum": ["shop", "trade", "gift", "quest_giver", "companion", "messenger", "hint"]
            }
          },
          "affinity": {
            "type": "object",
            "additionalProperties": false,
            "required": ["enabled"],
            "properties": {
              "enabled": { "type": "boolean" },
              "max": { "type": "integer", "minimum": 1, "default": 10 },
              "starting": { "type": "integer", "minimum": 0, "default": 0 }
            },
            "default": { "enabled": false, "max": 10, "starting": 0 }
          },
          "offers": {
            "type": ["object", "null"],
            "default": null,
            "additionalProperties": false,
            "required": ["currency_item_id", "daily_limit", "pools"],
            "properties": {
              "currency_item_id": { "type": "string", "minLength": 1 },
              "daily_limit": { "type": "integer", "minimum": 0, "description": "0 means unlimited." },
              "mode": { "type": "string", "enum": ["procedural", "curated", "mixed"], "default": "procedural" },
              "pools": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["pool_id", "weight", "filters"],
                  "properties": {
                    "pool_id": { "type": "string", "pattern": "^[a-z0-9_]+$" },
                    "weight": { "type": "integer", "minimum": 1 },
                    "quantity_range": {
                      "type": ["object", "null"],
                      "default": null,
                      "additionalProperties": false,
                      "required": ["min", "max"],
                      "properties": {
                        "min": { "type": "integer", "minimum": 1 },
                        "max": { "type": "integer", "minimum": 1 }
                      }
                    },
                    "filters": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "item_type": { "type": ["array", "null"], "default": null, "items": { "type": "string" } },
                        "require": {
                          "type": ["object", "null"],
                          "default": null,
                          "additionalProperties": false,
                          "properties": {
                            "usable_in": { "type": ["string", "null"], "default": null },
                            "safety_category": { "type": ["string", "null"], "default": null }
                          }
                        },
                        "tags_any": { "type": ["array", "null"], "default": null, "items": { "type": "string" } },
                        "tags_all": { "type": ["array", "null"], "default": null, "items": { "type": "string" } },
                        "exclude_tags_any": { "type": ["array", "null"], "default": null, "items": { "type": "string" } }
                      }
                    }
                  }
                }
              }
            }
          },
          "gifts": {
            "type": ["object", "null"],
            "default": null,
            "additionalProperties": false,
            "required": ["triggers", "pools"],
            "properties": {
              "cooldown_days": { "type": "integer", "minimum": 0, "default": 1 },
              "triggers": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "enum": ["greet", "bring_food", "after_portal", "random_day_event", "quest_step"] }
              },
              "affinity_required": { "type": "integer", "minimum": 0, "default": 0 },
              "pools": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["pool_id", "weight", "filters"],
                  "properties": {
                    "pool_id": { "type": "string", "pattern": "^[a-z0-9_]+$" },
                    "weight": { "type": "integer", "minimum": 1 },
                    "filters": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "item_type": { "type": ["array", "null"], "default": null, "items": { "type": "string" } },
                        "require": {
                          "type": ["object", "null"],
                          "default": null,
                          "additionalProperties": false,
                          "properties": {
                            "usable_in": { "type": ["string", "null"], "default": null },
                            "safety_category": { "type": ["string", "null"], "default": null }
                          }
                        },
                        "tags_any": { "type": ["array", "null"], "default": null, "items": { "type": "string" } },
                        "exclude_tags_any": { "type": ["array", "null"], "default": null, "items": { "type": "string" } }
                      }
                    }
                  }
                }
              }
            }
          },
          "notes": { "type": ["string", "null"], "default": null }
        },
        "allOf": [
          {
            "if": { "properties": { "npc_kind": { "const": "animal" } } },
            "then": { "required": ["species"] }
          }
        ]
      }
    }
  }
}
