{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$title": "Journal Templates Schema",
  "$id": "https://example.com/schemas/journal_templates.schema.json",
  "description": "Templates for journal page generation. Each template provides structure and prompts for a specific entry type.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "templates"
  ],
  "properties": {
    "templates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "https://example.com/schemas/journal_templates.schema.json#/$defs/template"
      }
    }
  },
  "$defs": {
    "template": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "template_id",
        "entry_type",
        "prompt",
        "structure"
      ],
      "properties": {
        "template_id": {
          "$ref": "common.schema.json#/$defs/id",
          "description": "Unique template identifier"
        },
        "entry_type": {
          "type": "string",
          "enum": [
            "tea",
            "spell",
            "field_note",
            "dream_fragment",
            "inventory"
          ],
          "description": "Type of journal entry this template produces"
        },
        "prompt": {
          "$ref": "common.schema.json#/$defs/nonempty_string",
          "description": "Reflective prompt or question for the entry"
        },
        "structure": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "common.schema.json#/$defs/nonempty_string"
          },
          "description": "Ordered list of content sections or guidance for the entry"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Optional tags for template selection"
        },
        "mood_hint": {
          "oneOf": [
            {
              "$ref": "common.schema.json#/$defs/nonempty_string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Suggested mood for this template"
        },
        "need_hint": {
          "oneOf": [
            {
              "$ref": "common.schema.json#/$defs/nonempty_string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Players need this template to address"
        }
      }
    }
  }
}
